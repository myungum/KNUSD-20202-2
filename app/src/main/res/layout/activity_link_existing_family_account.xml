<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="0.2" />
        <Button
            android:id="@+id/bt_link_existing_family_account_ok"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:background="@drawable/left_arrow" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="0.6" />

        <TextView
            android:id="@+id/title_of_admin"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="그룹 계정 연동하기"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1.1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="0.1" />
    </LinearLayout>
    <View
        android:background="@color/Pink2"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="연동 신청된 그룹 계정 아이디"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:id="@+id/tv_linked_family_id"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/Pink2"
        android:text="기존 부모 계정에 연동하기"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/bt_link_family_account"/>

</LinearLayout>
