<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/browser_actions_divider_color">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="부모 계정 연동하기"
        android:textSize="45dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#2DB400"
        android:gravity="center"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="연동 신청된 가족 계정 아이디"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#FFFFFF"
        android:id="@+id/tv_linked_family_id"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#2DB400"
        android:text="기존 부모 계정에 연동하기"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/bt_link_family_account"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#2DB400"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:id="@+id/bt_link_existing_family_account_ok"/>

</LinearLayout>
